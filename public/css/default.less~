/// LESS ///

.border-radius(@data){
    -webkit-border-radius: @data;
       -moz-border-radius: @data;
         -o-border-radius: @data;
            border-radius: @data;
}

.box-shadow(@data){
    -webkit-box-shadow: @data;
       -moz-box-shadow: @data;
         -o-box-shadow: @data;
            box-shadow: @data;
}

